 body{
 	background:url(<%= asset_path "background.jpg" %>) no-repeat;
 	background-size: cover;
 }

.cant-see-me{
	visibility: hidden;
}

h1{
	font-family: 'Alegreya', serif;	
	font-size: 7em;
	text-align: center;
	color: #53524f;
}

p{
	text-align: center;	
	font-family: 'Roboto', sans-serif;
	color: #fff;
}

h3{
	text-align: center;
	font-family: 'Roboto Condensed', sans-serif;
	font-size: 3em;
}

.col-md-6{
	background:rgba(93, 116, 128, 0.75);
	-moz-box-shadow: -6px 17px 27px #252e33;
	-webkit-box-shadow: -6px 17px 27px #252e33;
	box-shadow: -6px 17px 27px #252e33;
	text-align: center;
}

li{
	list-style: none;
}

a, a:visited, a:active{
	color: #fff;
}

a:hover{
	text-decoration: line-through;
	background: none;
}

.glyphicon:hover{
	text-decoration: none;
}